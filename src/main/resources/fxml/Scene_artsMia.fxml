<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.artsmia.FXMLController">
   <top>      
      <Label text="Artsmia (Esame del 10/07/2017)" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="5.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane vgap="5.0">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Id oggetto" GridPane.rowIndex="1" />
                  <Label text="LUN" GridPane.rowIndex="2" />
                  <ComboBox fx:id="boxLUN" onAction="#handleBoxLUNSelection" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="btnCalcolaComponenteConnessa" disable="true" mnemonicParsing="false" onAction="#doCalcolaComponenteConnessa" prefHeight="27.0" prefWidth="162.0" text="Componente connessa" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                  <Button fx:id="btnCercaOggetti" disable="true" mnemonicParsing="false" onAction="#doCercaOggetti" prefHeight="27.0" prefWidth="162.0" text="Cerca oggetti" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                  <Button fx:id="btnAnalizzaOggetti" mnemonicParsing="false" onAction="#doAnalizzaOggetti" prefHeight="27.0" prefWidth="162.0" text="Analizza oggetti" GridPane.columnIndex="2" GridPane.halignment="CENTER" />
                  <TextField fx:id="txtObjectId" disable="true" onKeyTyped="#handleObjectIdTyping" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="15.0" right="15.0" />
                     </GridPane.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </GridPane>
            <TextArea fx:id="txtResult" editable="false" prefRowCount="20" />
         </children>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
